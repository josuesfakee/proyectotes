@model AsistenteExpress.Models.Proceso

<style type="text/css">

    .dataTables_filter {
        text-align: right;
    }

    tfoot {
        display: table-header-group;
    }

    #loading {
        width: 100%;
        height: 100%;
        top: 0px;
        left: 0px;
        position: fixed;
        display: block;
        z-index: 99;
        opacity: 0.7;
        background-color: #fff;
    }

    #loading-image {
        position: absolute;
        top: 40%;
        left: 45%;
        z-index: 100
    }

    /*ANIMATION ALERT*/
    .messagealert {
        color: red;
        position: relative;
        -webkit-animation: mymove 2s infinite; /* Safari 4.0 - 8.0 */
        animation: mymove 2s infinite;
    }

    .bordes {
        border-radius: 15px;
        border-style: solid;
        border-color: #00a8e0;
    }

    .espacio {
        padding-top: 5px;
    }

    /* Safari 4.0 - 8.0 */
    @@-webkit-keyframes mymove {
        from {
            font-size: 12px;
        }

        to {
            font-size: 13px;
        }
    }

    @@keyframes mymove {
        from {
            font-size: 12px;
        }

        to {
            font-size: 13px;
        }
    }

    .fileContainer [type=file] {
        cursor: inherit;
        display: block;
        font-size: 15px;
        filter: alpha(opacity=0);
        min-height: 100%;
        min-width: 100%;
        opacity: 0;
        position: absolute;
        right: 0;
        text-align: right;
        top: 0;
    }
</style>


<div class="container" style="margin-top: 70px;">
    <div class="row bordes" style="padding: 10px">
        @{ Html.RenderPartial("~/Views/Asistente/PartialViews/_PartialFiltros.cshtml"); }
        @{ Html.RenderPartial("~/Views/Asistente/PartialViews/_PartialGridProcesos.cshtml"); }
    </div>
    <br />
    <div class="row bordes" style="padding: 10px">
        @{ Html.RenderPartial("~/Views/Asistente/PartialViews/_PartialProceso.cshtml"); }

    </div>
    <br />
    <div id="pdfviewer" class="row bordes" style="padding: 10px">
        <div id="pdfRenderer"></div>
    </div>
    <div class="row bordes" style="padding: 10px">
        @{ Html.RenderPartial("~/Views/Asistente/PartialViews/_PartialNotificacion.cshtml"); }
    </div>
</div>

@Scripts.Render("~/bundles/jquery")
<script src="~/Scripts/Modulos/procesos.js" type="text/javascript" charset="UTF-8"></script>
<script>
    $(document).ready(function () {
        // create DateTimePicker from input HTML element

        $("#datetimepicker").kendoDateTimePicker({
            value: "",
            dateInput: true
        });
        $("#datetimepicker").val('');
        $("#date").kendoDatePicker();
    });
</script>
